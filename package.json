{
  "name": "@sigle/slate-to-html",
  "version": "0.0.1",
  "description": "This package converts a Slate 0.47 JSON representation to HTML.",
  "main": "lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "prettier": "prettier --write '**/*.{json,md,js,ts,jsx,tsx,yml,css}'",
    "build": "tsc",
    "test": "jest",
    "release": "pnpm run build && pnpx changeset publish",
    "prepare": "husky install"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src",
    "lib"
  ],
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{json,md,js,ts,jsx,tsx,yml,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.3",
    "@changesets/cli": "2.21.0",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.21",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.4",
    "prettier": "2.5.1",
    "ts-jest": "27.1.3",
    "typescript": "4.6.2"
  }
}
